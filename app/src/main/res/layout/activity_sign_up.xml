<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/barberLogo"
                android:layout_width="211dp"
                android:layout_height="228dp"
                android:contentDescription="BarbAR Logo"
                android:src="@drawable/logo" />

            <EditText
                android:id="@+id/signup_firstname"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="15"
                android:hint="First Name"
                android:inputType="text"
                android:padding="11dp" />


            <EditText
                android:id="@+id/signup_surname"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="15"
                android:hint="Surname"
                android:inputType="text"
                android:padding="11dp" />

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="15"
                android:hint="Username"
                android:inputType="text"
                android:padding="11dp" />

            <EditText
                android:id="@+id/signup_Email"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="15"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="11dp" />

            <EditText
                android:id="@+id/signup_Password"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="15"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/ifApprenticeCheckbox"
                    android:layout_width="126dp"
                    android:layout_height="60dp"
                    android:checked="true"
                    android:clickable="false"
                    android:padding="12dp"
                    android:text="Apprentice"
                    android:theme="@style/CheckBoxTheme" />

                <CheckBox
                    android:id="@+id/ifMentorCheckbox"
                    android:layout_width="126dp"
                    android:layout_height="60dp"
                    android:checked="false"
                    android:padding="12dp"
                    android:text="Mentor"
                    android:theme="@style/CheckBoxTheme" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/barber-address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/AddressLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="15"
                    android:hint="Address Line1"
                    android:inputType="text"
                    android:padding="11dp"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/AddressLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="15"
                    android:hint="Address Line 2"
                    android:inputType="text"
                    android:padding="11dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/City"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="15"
                    android:hint="City"
                    android:inputType="text"
                    android:padding="11dp"
                    android:visibility="gone" />


                <Spinner
                    android:id="@+id/county-spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"

                    android:visibility="gone" />

            </LinearLayout>

            <Button
                android:id="@+id/signup-btn1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/signupbutton"
                android:paddingLeft="120dp"
                android:paddingRight="120dp"
                android:text="Sign Up"
                android:textColor="#fff" />

        </LinearLayout>

    </ScrollView>





</RelativeLayout>