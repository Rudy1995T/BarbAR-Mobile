<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartHaircutActivity">
    <TextView
        android:id="@+id/startHaircutTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:text="Do you want to start this haircut?"
        android:textColor="@color/colorBlack"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/startHaircutTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startHaircutTextView1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Haircut Details"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/startHaircutTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startHaircutTextView2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Name : "
        android:textColor="@color/colorBlack"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/startHaircutTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startHaircutTextView3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Expected time to take - 1hr"
        android:textColor="@color/colorBlack"
        android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/startHaircutTextView4"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/startHaircutTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GO BACK"
                android:textColor="@color/colorBlack"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/startHaircutTextView6"
                android:layout_toRightOf="@id/startHaircutTextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:layout_marginLeft="80dp"
                android:textColor="@color/colorMainRed"
                android:textSize="25dp" />
        </RelativeLayout>


</RelativeLayout>